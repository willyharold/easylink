{% extends '::template.html.twig' %}
{% block body %}



    <!-- Preloader Start-->
    <div id="preloader">
        <div class="row loader">
            <div class="loader-icon"></div>
        </div>
    </div>
    <!-- Preloader End ici qu'il faut rajouter le menu -->

    {{ render(controller('NanotechEasylinkBundle:Default:menu')) }}

    <!-- Page Title START -->
    <div class="page-title-section" style="background-image: url(http://via.placeholder.com/1520x290);">
        <div class="container">
            <h1>Poster votre annonce</h1>
            <ul>
                <li><a href="{{ path('nanotech_easylink_homepage') }}">Home</a></li>
                <li><a href="{{ path('nanotech_easylink_annonce') }}">Annonce</a></li>
            </ul>
        </div>
    </div>
    <!-- Page Title END -->


    <!-- Contact Section START -->
    <div class="section-block">
        <div class="container">
            <div class="row">
                <div class="col-md-7 col-sm-7 col-xs-12">
                    <div class="section-heading mt-15">
                        <h4>Dites nous ce dont vous avez besoin</h4>
                        <div class="section-heading-line-left"></div>
                    </div>
                    <div class="contact-form-box mt-30">
                        <!-- Form START -->
                        <form class="contact-form">
                            <div class="row">
                                <div class="col-md-12">
                                    <select id="pet-select">
                                        <option value="">Choisissez une catégorie de travaux</option>
                                        <option value="dog">Dog</option>
                                    </select>
                                </div>
                                <div class="col-md-12">
                                    <select id="pet-select">
                                        <option value="">Type de travaux</option>
                                        <option value="dog">Dog</option>
                                    </select>
                                </div>

                                <div class="col-md-12">
                                    <textarea name="message" placeholder="Description detaillé des travaux requis"></textarea>
                                </div>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input type="text" name="name" placeholder="Adresse">
                                </div>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input type="number" name="email" placeholder="Code postal">
                                </div>

                                <div class="col-md-12 mb-30">
                                    <div class="center-holder">
                                        <button type="submit">Envoyer</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                        <!-- Form END -->
                    </div>
                </div>

                <div class="col-md-5 col-sm-5 col-xs-12">
                    <div class="contact-info-box">
                        <div class="row">

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Contact Section END -->


    {{ render(controller('NanotechEasylinkBundle:Default:footer')) }}


    <!-- Scroll to top button Start -->
    <a href="#" class="scroll-to-top"><i class="fa fa-angle-up" aria-hidden="true"></i></a>
    <!-- Scroll to top button End -->

{% endblock %}
