{% extends 'NanotechEasylinkBundle:client:index.html.twig' %}
{% block droit %}
    <div class="col-md-9 col-sm-8 col-xs-12">
        <div class="row">
            <div class="col-md-6">
                <div class="services-single-left-heading">
                    <h4>Mes annonces</h4>
                </div>
            </div>
            <div class="col-md-6 text-right">
                <a href="{{ path('nanotech_easylink_client_new_annonce') }}" class="btn btn-info">Cr√©er une annonce</a>
            </div>
        </div>
        <div class="row">
            <br>
            {% for flashMessage in app.session.flashbag.get('annonce') %}
                <div class="alert alert-success" role="alert">
                    {{ flashMessage }}
                </div>
            {% endfor %}


           <table class="table table-striped" >
               <thead style="color: #0d6aad;">
                    <th scope="col">#</th>
                    <th scope="col">Annonce</th>
                    <th scope="col">Status</th>
                    <th scope="col">Artisan</th>
                    <th scope="col">Date</th>
                    <th scope="col">Action</th>
               </thead>
               <tbody style="color: black;">
               {% for annonce in annonces %}
                <tr>
                    <th scope="row">1</th>
                    <th>{{ annonce.description }}</th>
                    <th>{{ annonce.etat }}</th>
                    <th>{{ annonce.Artisan }}</th>
                    <th>{{ annonce.dateEn | date }}</th>
                    <th>
                        <a href="{{ path('nanotech_easylink_client_view_annonce',{id:annonce.id}) }}" class="btn btn-info">Voir</a>
                        <a href="{{ path('nanotech_easylink_client_edit_annonce',{id:annonce.id}) }}" class="btn btn-default">Modifier</a>
                        <a href="{{ path('nanotech_easylink_client_dell_annonce',{id:annonce.id}) }}" class="btn btn-danger">Supprimer</a>
                    </th>
                </tr>
               {% endfor %}
               </tbody>
           </table>

        </div>


    </div>
{% endblock %}