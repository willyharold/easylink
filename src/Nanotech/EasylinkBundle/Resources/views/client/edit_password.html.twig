{% extends 'NanotechEasylinkBundle:client:index.html.twig' %}
{% block droit %}
    <div class="col-md-9 col-sm-8 col-xs-12">
        <div class="row">
            <div class="col-md-6">
                <div class="services-single-left-heading">
                    <h4>Modification du mot de passe</h4>
                </div>
            </div>
            <div class="col-md-6 text-right">
                <a href="{{ path('nanotech_easylink_client_information') }}" class="btn btn-info">Annuler</a>
            </div>
        </div>
        <div class="row">
            <br>
            {% for flashMessage in app.session.flashbag.get('error') %}
                <div class="alert alert-danger" role="alert">
                    {{ flashMessage }}
                </div>
            {% endfor %}
            <div class="contact-form-box mt-30">
                <!-- Form START -->
                {{ form_start(form,{'attr':{'class':'contact-form'}}) }}

                    <div class="row">
                        <div class="col-md-12">
                           <input type="password" name="oldpassword" {% if error is defined and error %}class="colorbor"{% endif %} placeholder="Ancien mot de passe">
                        </div>
                        <div class="col-md-12">
                            <input type="password" name="newpassword" {% if error1 is defined and error1 %}class="colorbor"{% endif %} placeholder="Nouveau mot de passe">
                        </div>

                        <div class="col-md-12">
                            <input type="password" name="newpassword1" {% if error1 is defined and error1 %}class="colorbor"{% endif %} placeholder="Repeter le nouveau mot de passe">
                        </div>

                    </div>
                    <div class="col-md-12 mb-30">
                        <div class="center-holder">
                            <button type="submit">Envoyer</button>
                        </div>
                    </div>
                {{ form_end(form) }}
                <!-- Form END -->
            </div>

        </div>


    </div>
{% endblock %}

{% block script %}
    <script>
        function updatesous(){
            var id = $('#form-specialite').val();

            $.ajax({
                async: true,
                url: "/web/sousspecialite/"+id,
                method: "GET"
                ,
                success:function(data){
                    var element = document.getElementById("nanotech_easylinkbundle_offre_sous_specialite");
                    while (element.firstChild) {
                        element.removeChild(element.firstChild);
                    }
                    $('#nanotech_easylinkbundle_offre_sous_specialite').append(data);

                },
                error:function (er) {

                    var element = document.getElementById("nanotech_easylinkbundle_offre_sous_specialite");
                    while (element.firstChild) {
                        element.removeChild(element.firstChild);
                    }
                }

            });

        }
    </script>
{% endblock %}